OUTRO EXEMPLO A BAIXO

const fn = (name) => {
  
  return function(){
    return name
  }
}

const fisrt_name = fn("Cleton")
const fisrt_name2 = fn("Polyana")
console.log(fisrt_name() + " - " + fisrt_name2()) //Cleton - Polyana




